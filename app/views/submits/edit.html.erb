<div class="container">
  <div class="row">
    <div class="card col s12">
      <div class="card-content">
        <div class="card-title">글 수정하기</div>
        <%= form_tag submit_path(@submits), method: "put", multipart: true do %>
          <input type="hidden" name="id" value="<%=@submits.content%>">
          <div class="input-field">
            <%= file_field_tag :image %>
          </div>

          <div class="input-field">
            <%= text_area_tag :title, @submits.content, class: "materialize-textarea", placeholder: "제목" %>
          </div>

          <div class="input-field">
            <%= text_area_tag :content, @submits.content, class: "materialize-textarea", placeholder: "내용" %>
          </div>

          <div class="input-field">
            <%= button_tag "수정하기", class: "btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>